# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Model Configuration
# Text-to-Image Model (default: runwayml/stable-diffusion-v1-5)
TEXT_TO_IMAGE_MODEL=runwayml/stable-diffusion-v1-5

# Inpainting Model (default: runwayml/stable-diffusion-inpainting)
INPAINTING_MODEL=runwayml/stable-diffusion-inpainting

# Hardware Configuration
# Device to use: 'cuda' for GPU, 'cpu' for CPU (auto-detected if not set)
DEVICE=auto

# Memory Optimization
# Enable attention slicing for lower VRAM usage (true/false)
ENABLE_ATTENTION_SLICING=true

# Enable memory efficient attention (true/false)
ENABLE_MEMORY_EFFICIENT_ATTENTION=true

# Cache Directory (optional)
# Directory to cache downloaded models
CACHE_DIR=./models_cache

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=*

# Model Loading Configuration
# Skip model loading on startup (useful for testing)
SKIP_MODEL_LOADING=false

# Image Generation Limits
MAX_IMAGE_SIZE=1024
MAX_BATCH_SIZE=4
MAX_INFERENCE_STEPS=100

# Hugging Face Configuration (optional)
# HUGGINGFACE_TOKEN=your_token_here 